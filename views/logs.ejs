<%- include('partials/header', { title: 'Logs de Atividade' }) %>

<div class="card">
    <div class="card-header">
        <i class="fa-solid fa-list-ul"></i> Logs de Atividade do Bot
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Data/Hora</th>
                        <th>NÃ­vel</th>
                        <th>Mensagem</th>
                    </tr>
                </thead>
                <tbody>
                    <% logs.forEach(log => { %>
                        <tr>
                            <td><%= new Date(log.timestamp).toLocaleString('pt-BR') %></td>
                            <td>
                                <% if (log.level === 'INFO') { %>
                                    <span class="badge bg-success">INFO</span>
                                <% } else { %>
                                    <span class="badge bg-danger">ERROR</span>
                                <% } %>
                            </td>
                            <td><%= log.message %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/footer') %>